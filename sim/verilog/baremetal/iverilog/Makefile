TARGET               := or1k-pu
VPI_MODULES          := elf-loader.vpi jtag_vpi.vpi
TOPLEVEL             := or1k_testbench
IVERILOG_OPTIONS     := -DSIM
HELLO_C              ?= +elf_load=../../../../software/baremetal/hello/c/hello_c.elf
HELLO_CPP            ?= +elf_load=../../../../software/baremetal/hello/cpp/hello_cpp.elf

all:
	$(VPI_MODULES) $(TARGET)

$(TARGET):
	iverilog -s$(TOPLEVEL) -c system.vc -o $@ $(IVERILOG_OPTIONS)

run-hello_c: $(VPI_MODULES) $(TARGET)
	vvp -n -M. -l log/or1k-hello_c.log $(patsubst %.vpi,-m%,$(VPI_MODULES)) $(TARGET) $(HELLO_C)

run-hello_cpp: $(VPI_MODULES) $(TARGET)
	vvp -n -M. -l log/or1k-hello_cpp.log $(patsubst %.vpi,-m%,$(VPI_MODULES)) $(TARGET) $(HELLO_CPP)


clean:
	$(RM) $(VPI_MODULES) $(TARGET)

elf-loader_LIBS := -lelf
elf-loader_INCS := -I../../../../software/elf-loader/
elf-loader_SRCS := ../../../../software/elf-loader/elf-loader.c ../../../../software/elf-loader/vpi_wrapper.c

elf-loader.vpi: $(elf-loader_SRCS)
	iverilog-vpi --name=elf-loader $(elf-loader_LIBS) $(elf-loader_INCS) $?

clean_elf-loader:
	$(RM) elf-loader.vpi

jtag_vpi_LIBS := 
jtag_vpi_INCS := -I../../../../dbg/software/or1k/debug/
jtag_vpi_SRCS := ../../../../dbg/software/or1k/debug/jtag_common.c ../../../../dbg/software/or1k/debug/jtag_vpi.c ../../../../dbg/bench/verilog/pu/or1k/wb/debug/jtag_vpi/jtag_vpi.sv

jtag_vpi.vpi: $(jtag_vpi_SRCS)
	iverilog-vpi --name=jtag_vpi $(jtag_vpi_LIBS) $(jtag_vpi_INCS) $?

clean_jtag_vpi:
	$(RM) jtag_vpi.vpi
